@model DomainLayer.Models.PropertyInfo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
@*
<h1>Create</h1>

<h4>PropertyInfo</h4>
